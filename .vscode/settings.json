{
    "deploy": {
        "packages": [
            {
                "name": "python-robot",
                "files": [
                    "/**/*.*"
                ],
                "exclude": [
                    "/**/*.pdf",
                    ".git/**" 
                ],
                "useTargetList": true,
                "targets": [ "RPI SFTP" ],
                "deployOnSave": true 
            }
        ],

        "targets": [        
            {
                "type": "sftp",
                "name": "RPI SFTP",
                "description": "Home folder on RPI",

                "dir": "/home/pi/python-robot",
                "host": "192.168.1.80", "port": 22,
                "user": "pi" 
            }
        ]
    }
}