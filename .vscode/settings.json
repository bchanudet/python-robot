{
    "deploy": {
        "packages": [
            { 
                "name": "python-robot",
                "description": "Python Robot code",
                "files": [
                    "**"
                ],
                "exclude": [
                    "resources/**",
                    ".git/**",
                    "3d-models/**" 
                ],
                "targets": [ "RPI_SFTP" ],
                "deployOnSave": true 
            }
        ],

        "targets": [        
            { 
                "name": "RPI_SFTP",
                "description": "Home folder on RPI",

                "type": "sftp",
                "dir": "/home/pi/python-robot",

                "host": "192.168.1.80", 
                "port": 22,
                "user": "pi",
                "password": "raspberry"
            }
        ],
        "openOutputOnDeploy": false,
        "showPopupOnSuccess": false
    }
}